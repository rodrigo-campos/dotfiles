#!/usr/bin/env bash

config_path="$HOME/.config/todo"
todo_file="$config_path/todo"

mkdir -p "$config_path"
touch "$todo_file"

ask() {
  echo $(tdmenu -p "add/remove" < "$todo_file")
}

line=$(ask)
while [ -n "$line" ]; do
  if grep "^$line\$" "$todo_file"; then
    sed -i "/^$line\$/d" "$todo_file"
    line=""
  else
    echo "$line" >> "$todo_file"
  fi
  line=$(ask)
done
exit 0
