#!/usr/bin/env bash
source ~/.autostart.sh

# while xsetroot -name "`date` `uptime | sed 's/.*,//'`"
# do
#     sleep 1
# done &

# relaunch DWM if the binary changes, otherwise bail
csum=$(sha1sum $(which dwm))
new_csum=""
while true
do
    if [ "$csum" != "$new_csum" ]
    then
        csum=$new_csum
        dwm 2> ~/.dwm.log
    # else
        # exit 0
    fi
    new_csum=$(sha1sum $(which dwm))
    sleep 0.5
done
